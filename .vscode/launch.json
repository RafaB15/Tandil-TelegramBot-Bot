  "version": "0.2.0",
  "configurations": [
      {
          "type": "rdbg",
          "name": "Attach rdbg",
          "request": "attach"
      },
      {
          "type": "rdbg",
          "name": "Run current test file",
          "request": "launch",
          "command": "rspec",
          "script": "${file}",
          "args": [],
          "env": {
              "ENV": "test"
            },
          "askParameters": true,
          "useBundler": true
      },
      {
          "type": "rdbg",
          "name": "Run tests",
          "request": "launch",
          "command": "rake all",
          "script": "${workspaceFolder}/${AskForProgramName}",
          "args": [],
          "env": {
            "RACK_ENV": "test"
          },
          "askParameters": false, // Do not ask startup parameter any more
          "useBundler": true
      },
  ]
}
